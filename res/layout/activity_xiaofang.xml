        <TableLayout
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="3dp"
            android:padding="2dp"
            android:paddingRight="3dp"
            android:stretchColumns="*" >

		<TableRow
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >

			<Button
			    android:id="@+id/btn_1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="1"
			    android:visibility="invisible" >

			</Button>
			<Button android:text="上" android:id="@+id/buttonup" android:visibility="invisible"></Button>
			<Button android:text="2" android:id="@+id/btn_2" android:visibility="invisible"></Button>
			
		</TableRow>
		<TableRow>
			<Button android:text="左" android:id="@+id/buttonleft" android:visibility="invisible"></Button>
			<Button android:text="加" android:id="@+id/buttonadd" android:visibility="invisible"></Button>
			<Button android:text="右" android:id="@+id/buttonright" android:visibility="invisible"></Button>
			
		</TableRow>
		<TableRow>
			<Button android:text="4" android:id="@+id/btn_4" android:visibility="invisible"></Button>
			<Button android:text="下" android:id="@+id/buttondown" android:visibility="invisible"></Button>
			<Button android:text="5" android:id="@+id/btn_5" android:visibility="invisible"></Button>
			
		</TableRow>
		
	</TableLayout>
	
     <ImageButton
            android:id="@+id/buttonmode"
            android:scaleType="fitXY"
           
            android:layout_width="40dip"
            android:layout_height="40dip"            
            android:layout_gravity="right|top"
            android:layout_alignRight="@+id/bmapView" 
            android:layout_marginTop="100dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/app_list_corner_round"
            android:src="@drawable/mode" />
     
	
	 <ImageButton
             android:id="@+id/buttonenlarge"
             android:scaleType="fitXY"
             android:background="#e0000000"
             android:layout_width="40dip"
             android:layout_height="40dip"            
              android:layout_gravity="right|bottom"
              android:layout_alignRight="@+id/bmapView" 
            android:layout_marginBottom="120dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            
             android:src="@drawable/enlarge" />
	 
	<ImageButton
             android:id="@+id/buttonsmall"
             android:scaleType="fitXY"
             android:background="#e0000000"
              android:layout_width="40dip"
             android:layout_height="40dip"            
              android:layout_gravity="right|bottom"
              android:layout_alignRight="@+id/bmapView" 
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
             android:src="@drawable/small" />
	
    </FrameLayout>

	
